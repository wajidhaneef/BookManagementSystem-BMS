<form method="post" enctype="multipart/form-data" asp-action="UploadCoverPage" asp-controller="Book">
    <div class="form-group">
        <label for="bookId">BookID</label>
        <input type="text" class="form-control" id="bookId" name="bookId" placeholder="Enter BookID" required>
    </div>
    <div class="form-group">
        <label for="coverPageFile">Cover Page File</label><br/>
        <input type="file" class="form-control-file" id="coverPageFile" name="coverPageFile" accept="image/png, image/gif, image/jpeg" required>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
