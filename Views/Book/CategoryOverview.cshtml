@{
    ViewData["Title"] = "Category Overview";
}

<h1>Category: @ViewBag.Category.CategoryName</h1>

<h2>Books in this category</h2>
<ul>
    @foreach (var book in ViewBag.Books)
    {
        <li>
            <a href="@Url.Action("BookOverview", new { bookId = book.BookID })">
                @book.BookName
            </a>
        </li>
    }
</ul>
